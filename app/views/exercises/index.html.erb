<div ng-app="app">
  <div ng-controller="exercisesCtrl" ng-init="setUpIndex()">
    
    <!-- <label>Search by name:</label>
    <input ng-model="nameFilter" list="names">
    <datalist id="names">
      <option ng-repeat="meeting in meetings">{{ meeting.name }}</option>
    </datalist> -->

    <!-- div>
      <button ng-click="changeOrderAttribute('start_time')">Sort by date</button>
    </div> -->
    <div class = row>
      <div class = "col-md-6 col-md-offset-3">
        <div class="btn-group">
          <% Category.all.each do |category| %>
            <a type="button" ng-click="changeExercises(<%= category.id %>)" class="btn btn-round btn-info"><%= category.name %></a>
          <% end %>
        </div>
      </div>  
    </div>

    <div class = "row">

      <div ng-repeat="exercise in exercises">
        <div class="clearfix" ng-if="$index % 3 == 0"></div>
          <div class = "col-md-4">
            <div class = "card card-product">
                <div class="card-image" data-header-animation="true">
                    <a href="#pablo">
                        <img class="img" src="/img/card-3.jpeg">
                    </a>
                </div>
                <div class="card-content">
                  <div class="card-actions">
                      <button type="button" class="btn btn-success btn-simple" ng-click="showModal(exercise)" data-toggle="modal" data-target="#noticeModal" rel="tooltip" data-placement="bottom" title="Add">
                          <i class="material-icons">info</i>
                      </button>
                      <!-- <button type="button" class="btn btn-danger btn-simple" rel="tooltip" data-placement="bottom" title="Remove">
                          <i class="material-icons">close</i>
                      </button> -->
                  </div>

                  <h4 class="card-title">
                      <a href="#pablo">{{ exercise.name }}</a>
                  </h4>

                  <div class="card-description">
                      <p>{{ exercise.equipment }}</p>
                      <p>{{ exercise.body_parts }}</p>
                      <p>{{ exercise.difficulty }}</p>
                  </div>
                </div>
            </div>
          </div>
        </div>
    </div>
  
      <!-- <p>
        Tags:
        <a ng-repeat="tag in meeting.tags" href="/meetings?tag={{ tag.name }}">{{ tag.name }}</a>
      </p> -->

                <!-- notice modal -->
        <div class="modal fade" id="noticeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-notice">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="material-icons">clear</i></button>
                        <h5 class="modal-title" id="myModalLabel">{{ modalExercise.name }}</h5>
                    </div>
                    <div class="modal-body">
                        <div class="instruction">
                            <div class="row">
                                <div class="col-md-8">
                                    <p>
                                    {{modalExercise.equipment}}</p>
                                    {{modalExercise.body_parts}}</p>
                                    {{modalExercise.difficulty}}</p>
                                    {{modalExercise.description}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer text-center">
                        <button type="button" class="btn btn-info btn-round" data-dismiss="modal">Sounds good!</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- end notice modal -->
      </div>
    
    </div>

  </div>

</div>







