<div ng-app="app">
  <div ng-controller="workoutsCtrl" ng-init="setUpIndex()">

    <div class = "row">

      <div ng-repeat="workout in workouts">
        <div class="clearfix" ng-if="$index % 3 == 0"></div>
          <div class = "col-md-4">
            <div class = "card card-product">
                <div class="card-image" data-header-animation="true">
                    <a href="#pablo">
                        <img class="img" src="/img/card-3.jpeg">
                    </a>
                </div>
                <div class="card-content">
                  <div class="card-actions">
                      <a type="button" href="/dailyworkouts/{{ workout.id }}" class="btn btn-default btn-simple" rel="tooltip" data-placement="bottom" title="View">
                          <i class="material-icons">art_track</i>
                      </a>
                      <a type="button" href="/addexercises/{{ workout.id }}" class="btn btn-success btn-simple" rel="tooltip" data-placement="bottom" title="Add">
                          <i class="material-icons">add</i>
                      </a>
                      <a type="button" ng-click="deleteWorkout({{workout.id}})" class="btn btn-success btn-simple" rel="tooltip" data-placement="bottom" title="Delete">
                          <i class="material-icons">delete</i>
                      </a>
                  </div>
                  <h4 class="card-title">
                      <a href="#pablo">{{ workout.name }}</a>
                  </h4>
                  <div class="card-description">
					
                  </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>









