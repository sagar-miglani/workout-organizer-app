(function() {
  "use strict";

  angular.module("app").controller('exercisesCtrl', function($scope, $http){

    $scope.setUpIndex = function(){ 
      $scope.modalExercise = {};

      $http.get('/api/v1/exercises.json').then(function(response){
        $scope.exercises = response.data;
      });
      // $http.get('/api/v1/tags.json').then(function(response){
      //   $scope.tags = response.data;
      // });
    };


    $scope.changeExercises  = function(category){
      $http.get('/api/v1/exercises.json?category=' + category).then(function(response){
        $scope.exercises = response.data;
      });
    };
    $scope.showModal = function(exercise)
    {
      console.log("this is happening");
      $scope.modalExercise = exercise;
    }
    window.scope = $scope;

  });
}());